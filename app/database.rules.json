{
  "rules": {
    "$system_id": {
      "devices": {
        "$device_id": {
          "name": { ".validate": "newData.isString()" },
          "room": { ".validate": "newData.isString()" },
          "type": { ".validate": "newData.isString()" },
          "status": { ".validate": "newData.isBoolean()" },
          "$other": { ".validate": false }
        }
      },
      "type": {
        "$type_id": {
          "name": { ".validate": "newData.isString()" },
          "$other": { ".validate": false }
        },
        ".write": false
      },
      "rooms": {
        "$room_id": {
          "name": { ".validate": "newData.isString()" },
          "devices": {
            "$device_id": { ".validate": "newData.isBoolean()" }
          },
          "$other": { ".validate": false }
        }
      },
      "environment": {
        "$env_id": {
          "name": { ".validate": "newData.isString()" },
          "devices": {
            "$device_id": { ".validate": "newData.isBoolean()" }
          },
          "$other": { ".validate": false }
        }
      }
    },
    "users": {
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    },
    ".read": true,
    ".write": true
  }
}
